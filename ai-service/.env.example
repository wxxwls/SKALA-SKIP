# Application Settings
APP_NAME=AI Service
APP_VERSION=1.0.0
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:8080"]

# Spring Boot Backend
SPRING_BOOT_URL=http://localhost:8080

# OpenAI
